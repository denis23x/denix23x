generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model demoBook {
  id          Int          @id @default(autoincrement()) @db.Integer
  title       String
  description String
  cover       String?
  genre       String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        demoUser     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  reviews     demoReview[]
}

model demoReview {
  id        Int      @id @default(autoincrement()) @db.Integer
  message   String
  rating    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  book      demoBook @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId    Int
  user      demoUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
}

model demoUser {
  id        Int          @id @default(autoincrement()) @db.Integer
  name      String
  bio       String
  email     String       @unique
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  books     demoBook[]
  reviews   demoReview[]
}
