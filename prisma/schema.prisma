generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model demoBook {
  id          Int          @id @default(autoincrement()) @db.Integer
  title       String
  description String
  cover       String?
  format      String
  genre       String
  publisher   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        demoUser     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int
  reviews     demoReview[]
}

model demoReview {
  id        Int      @id @default(autoincrement()) @db.Integer
  message   String
  rating    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  book      demoBook @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId    Int
  user      demoUser @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
}

model demoUser {
  id        Int          @id @default(autoincrement()) @db.Integer
  avatar    String?
  firstName String
  lastName  String
  gender    String
  sex       String
  bio       String
  email     String       @unique
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  books     demoBook[]
  reviews   demoReview[]
}
